---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const toPathname = Astro.props.href?.toString() ?? "";
const locationPathname = Astro.url.pathname;

const href = toPathname !== "/" && toPathname.endsWith("/") ? toPathname.slice(0, -1) : toPathname;

const isActive = href === locationPathname || locationPathname.startsWith(`${href}/`);
---

<a {...Astro.props} aria-current={isActive ? "page" : "false"}>
  <slot />
</a>
